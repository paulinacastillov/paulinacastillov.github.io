---
const skills = [
  "Mathematical logic",
  "Python",
  "R",
  "Microsoft Excel",
  "SQL",
  "Google Analytics",
  "Problem-solving",
  "Azure",
  "Tableau",
  "Adobe Premier",
  "Adobe Illustrator",
  "Spanish (Native)",
];
---

<section class="relative mt-10">
  <div class="max-w-5xl mx-auto text-center">
    <!-- <h2 class="text-2xl md:text-3xl font-semibold text-zinc-100 tracking-tight">
      Toolkit & Skills
    </h2>
    <p class="mt-2 text-zinc-400">What I use to turn questions into answers.</p> -->

    <!-- Contenedor “frosted” -->
    <div class="mt-6 rounded-2xl border border-white/15 bg-white/10 backdrop-blur-md p-5">
      <!-- Chips -->
      <ul class="flex flex-wrap justify-center gap-3">
        {skills.map((skill) => (
          <li class="shrink-0">
            <span
              class="inline-flex items-center rounded-xl border border-white/15
                     bg-white/10 px-3 py-1.5 text-sm font-medium
                     text-zinc-100/90 hover:bg-white/15 hover:text-white transition"
            >
              {skill}
            </span>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Glows suaves como en educación -->
  <div class="pointer-events-none absolute -right-20 -bottom-16 h-72 w-72 rounded-full bg-sky-500/10 blur-3xl"></div>
  <div class="pointer-events-none absolute -left-20 -top-20 h-72 w-72 rounded-full bg-emerald-500/10 blur-3xl"></div>
</section>
