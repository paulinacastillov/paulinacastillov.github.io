---
interface Props { active?: string }
const { active = 'abstract' } = Astro.props;

function Link(id: string, label: string) {
  const isActive = active === id;
  const base = "inline-flex items-center justify-center rounded-xl border border-zinc-700 px-4 py-2.5 text-sm font-medium transition";
  const on   = "bg-zinc-100 text-zinc-900 hover:bg-white/90";
  const off  = "text-zinc-200 hover:bg-zinc-800/60";
  return /* html */ `
    <a href="/${id}/" class="${base} ${isActive ? on : off}">${label}</a>
  `;
}
---

<div class="relative overflow-hidden rounded-2xl
  bg-gradient-to-br from-zinc-800 via-zinc-900 to-black
  dark:from-zinc-800 dark:via-zinc-900 dark:to-black
  shadow-lg p-6 md:p-10 mt-5 border border-zinc-800/60">
  <Fragment set:html={Link('projects','Abstract')} />
  <Fragment set:html={Link('motivation','Motivation')} />
  <Fragment set:html={Link('math','Math Fromulation')} />
  <Fragment set:html={Link('compute','Computational')} />
  <Fragment set:html={Link('results','Results')} />
</div>
