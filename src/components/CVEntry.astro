---
interface Props {
    institution: string;
    location: string;
    position: string;
    startDate?: string;
    endDate?: string;
    year?: number;
    description: string[];
}

const {institution, location, position, startDate, endDate, year, description} = Astro.props;
---

<li class="mb-5 ms-4"> 
    <!-- EL bullet -->
    <div class="absolute size-2.5 bg-orange rounded-full mt-2.5 -start-[5.5px] border border-orange dark:border-orange dark:bg-orange"></div>

    <!-- cajita de posición y ubicacion -->
    <div class="flex flex-row space-y-0 justify-between items-center">
        <h3>{position}</h3>
        <p class="text-base opacity-80 hidden md:inline">{location}</p>
    </div>

    <!-- Pone las fechas con formato condicional  -->
    <div class="flex flex-col md:flex-row space-y-1 justify-between">
        <span class="opacity-80 font-semibold italic text-base md:text-lg">
            {institution}
        </span>  
        {(startDate==="" && endDate==="") ? 
            (<time class="text-base opacity-80">{year}</time>) :
            (<time class="text-base opacity-80">{startDate} —  {endDate}</time>)
        }
    </div>
    
    <!-- Si hay items en la descripción aparecen, si no,no  -->
    {description.length<=1 ? 
        (<p class="text-base mt-1.5">{description[0]}</p>) :
        (<ul class="text-base list-disc mt-1.5 pl-4">
            {description.map((item) => (<li>{item}</li>))}
        </ul>)
    }
</li>
